// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  USER
  ADMIN
}

enum WorkflowStatus {
  REQUESTED
  QUOTED
  APPROVED
  PAYMENT
  IN_PROGRESS
  COMPLETED
}

enum PaymentType {
  ADVANCE
  FULL
  MILESTONE
}

enum PaymentStatus {
  PENDING
  AUTHORIZED
  CAPTURED
  FAILED
  REFUNDED
}

enum ReminderType {
  QUOTATION_FOLLOW_UP
  PAYMENT_DUE
  WORK_PROGRESS_UPDATE
  COMPLETION_REMINDER
}

// Models
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  name          String
  phone         String?
  role          Role     @default(USER)
  address       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  requests      ServiceRequest[]
  quotations    Quotation[]
  payments      Payment[]
  progressLogs  WorkProgress[]
  reminders     Reminder[]

  @@index([email])
}

model Service {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  description String?
  basePrice   Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  requests    ServiceRequest[]

  @@index([code])
}

model ServiceRequest {
  id                String   @id @default(cuid())
  requestCode       String   @unique
  userId            String
  serviceId         String
  status            WorkflowStatus @default(REQUESTED)
  description       String?
  location          String?
  preferredDate     DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  service           Service  @relation(fields: [serviceId], references: [id], onDelete: Restrict)
  quotations        Quotation[]
  payments          Payment[]
  progressLogs      WorkProgress[]
  reminders         Reminder[]

  @@index([userId])
  @@index([serviceId])
  @@index([status])
}

model Quotation {
  id                String   @id @default(cuid())
  quotationNumber   String   @unique
  requestId         String
  userId            String
  baseAmount        Float
  serviceTax        Float    @default(0)
  gstRate           Float    @default(18)
  gstAmount         Float
  totalAmount       Float
  description       String?
  validUntil        DateTime?
  status            String   @default("PENDING")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  request           ServiceRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  milestones        Milestone[]

  @@index([requestId])
  @@index([userId])
  @@index([status])
}

model Milestone {
  id                String   @id @default(cuid())
  quotationId       String
  description       String
  amount            Float
  dueDate           DateTime?
  status            String   @default("PENDING")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  quotation         Quotation @relation(fields: [quotationId], references: [id], onDelete: Cascade)
  payments          Payment[]

  @@index([quotationId])
}

model Payment {
  id                String   @id @default(cuid())
  paymentId         String?  @unique
  requestId         String
  userId            String
  milestoneId       String?
  amount            Float
  currency          String   @default("INR")
  type              PaymentType
  status            PaymentStatus @default(PENDING)
  razorpayOrderId   String?
  razorpayPaymentId String?
  razorpaySignature String?
  description       String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  request           ServiceRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  milestone         Milestone? @relation(fields: [milestoneId], references: [id], onDelete: SetNull)

  @@index([requestId])
  @@index([userId])
  @@index([status])
  @@index([razorpayPaymentId])
}

model WorkProgress {
  id                String   @id @default(cuid())
  requestId         String
  userId            String
  title             String
  description       String?
  photos            String[]
  videos            String[]
  documents         String[]
  completionPercent Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  request           ServiceRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([requestId])
  @@index([userId])
}

model Reminder {
  id                String   @id @default(cuid())
  requestId         String
  userId            String
  type              ReminderType
  message           String
  dueDate           DateTime
  sent              Boolean  @default(false)
  sentAt            DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  request           ServiceRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([requestId])
  @@index([userId])
  @@index([dueDate])
}
